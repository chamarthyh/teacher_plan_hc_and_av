<% if @goal.present? %>
  <% if @goal.errors.any? %>
    <% @goal.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new goal
</h1>


<hr>

<form action="/create_goal" method="post">

  <div class="form-group">
    <label for="goal_text">
      Goal text
    </label>

    <input type="text" id="goal_text" name="goal_text" class="form-control" value="<%= @goal.goal_text %>">
  </div>

  <div class="form-group">
    <label for="plan_id">
      Plan
    </label>

    <%= select_tag(:plan_id, options_from_collection_for_select(Plan.all, :id, :plan_name, @goal.plan_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create goal
  </button>
</form>

<hr>

<a href="/goals">
  Go back
</a>
