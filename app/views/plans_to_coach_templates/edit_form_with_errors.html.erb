<% if @plans_to_coach.errors.any? %>
  <% @plans_to_coach.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit plans to coach #<%= @plans_to_coach.id %>
</h1>

<hr>

<form action="/update_plans_to_coach/<%= @plans_to_coach.id %>" method="post">

  <div class="form-group">
    <label for="plan_id">
      Plan
    </label>

    <%= select_tag(:plan_id, options_from_collection_for_select(Plan.all, :id, :plan_name, @plans_to_coach.plan_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="coach_id">
      Coach
    </label>

    <%= select_tag(:coach_id, options_from_collection_for_select(Coach.all, :id, :email, @plans_to_coach.coach_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update plans to coach
  </button>
</form>

<hr>

<a href="/plans_to_coaches">
  Go back
</a>
