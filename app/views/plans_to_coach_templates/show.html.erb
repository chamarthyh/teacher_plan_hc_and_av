<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Plans to coach #<%= @plans_to_coach.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/plans_to_coaches" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/plans_to_coaches/<%= @plans_to_coach.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit plans to coach
        </a>
      </div>

      <div class="col">
        <a href="/delete_plans_to_coach/<%= @plans_to_coach.id %>" class="btn btn-block btn-outline-secondary">
          Delete plans to coach
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Plan
      </dt>
      <dd>
        <% if @plans_to_coach.plan.present? %>
          <a href="/plans/<%= @plans_to_coach.plan_id %>">
            <%= @plans_to_coach.plan.plan_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Coach
      </dt>
      <dd>
        <% if @plans_to_coach.coach.present? %>
          <a href="/coaches/<%= @plans_to_coach.coach_id %>">
            <%= @plans_to_coach.coach.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@plans_to_coach.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@plans_to_coach.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

