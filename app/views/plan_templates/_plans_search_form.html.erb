<%= search_form_for @q, :class => collapse_search_form, :id => "plans_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :plan_name_cont, "Plan name contains" %>
    <%= f.text_field :plan_name_cont, :class => "form-control", :placeholder => "Plan name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :status_cont, "Status contains" %>
    <%= f.text_field :status_cont, :class => "form-control", :placeholder => "Status contains" %>
  </div>

  <div class="form-group">
    <%= f.label :coach_id, "Coach" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :coach_id_gteq, :class => "form-control", :placeholder => "Coach greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :coach_id_lteq, :class => "form-control", :placeholder => "Coach less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :created_at, "Teacher Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='teachergteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :teacher_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Teacher Created at greater than or equal to", :data => {:target => '#teachergteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#teachergteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='teacherlteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :teacher_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Teacher Created at less than or equal to", :data => {:target => '#teacherlteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#teacherlteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#teachergteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#teacherlteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#teachergteqcreated_atPicker').on("dp.change", function (e) {
              $('#teacherlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#teacherlteqcreated_atPicker').on("dp.change", function (e) {
              $('#teachergteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :goals_goal_text_cont, "Goal goal_text contains" %>
    <%= f.text_field :goals_goal_text_cont, :class => "form-control", :placeholder => "Goal goal_text contains" %>
  </div>

  <div class="form-group">
    <%= f.label :coaches_email_cont, "Coach email contains" %>
    <%= f.text_field :coaches_email_cont, :class => "form-control", :placeholder => "Coach email contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/plans" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#plans_filters">
  Show filters
</a>
