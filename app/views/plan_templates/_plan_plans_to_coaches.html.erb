<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Plans To Coaches

    <a data-toggle="collapse" href="#plan_plans_to_coaches_new_form">
      Add plans to coach
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @plan.plans_to_coaches.each do |plans_to_coach| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/plans_to_coaches/<%= plans_to_coach.id %>">
          <%= plans_to_coach.plan_id %>
        </a>

        <a href="/delete_plans_to_coach_from_plan/<%= plans_to_coach.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="plan_plans_to_coaches_new_form">
        <%= render partial: "plan_templates/plan_plans_to_coaches_new_form" %>
      </div>
    </div>

  </ul>
</div>
