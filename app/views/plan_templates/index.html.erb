<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All plans
    </h1>

    <a href="/plans/new" class="btn btn-block btn-outline-secondary">
      Add a new plan
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Plan name
        </th>

        <th>
          Teacher
        </th>

        <th>
          Coach
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @plans.each do |plan| %>
      <tr>
        <!-- Display plan.id start -->
        <td>
          <%= plan.id %>
        </td>
        <!-- Display plan.id end -->

        <!-- Display plan.plan_name start -->
        <td>
          <%= plan.plan_name %>
        </td>
        <!-- Display plan.plan_name end -->

        <!-- Display plan.teacher_id start -->
        <td>
          <%= plan.teacher.created_at %>
        </td>
        <!-- Display plan.teacher_id end -->

        <!-- Display plan.coach_id start -->
        <td>
          <%= plan.coach_id %>
        </td>
        <!-- Display plan.coach_id end -->

        <!-- Display plan.status start -->
        <td>
          <%= plan.status %>
        </td>
        <!-- Display plan.status end -->

        <!-- Display plan.created_at start -->
        <td>
          <%= time_ago_in_words(plan.created_at) %> ago
        </td>
        <!-- Display plan.created_at end -->

        <!-- Display plan.updated_at start -->
        <td>
          <%= time_ago_in_words(plan.updated_at) %> ago
        </td>
        <!-- Display plan.updated_at end -->

        <td>
          <a href="/plans/<%= plan.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
