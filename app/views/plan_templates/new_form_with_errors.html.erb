<% if @plan.present? %>
  <% if @plan.errors.any? %>
    <% @plan.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new plan
</h1>


<hr>

<form action="/create_plan" method="post">

  <div class="form-group">
    <label for="plan_name">
      Plan name
    </label>

    <input type="text" id="plan_name" name="plan_name" class="form-control" value="<%= @plan.plan_name %>">
  </div>

  <input type="hidden" name="teacher_id" value="<%= current_teacher.id %>">

  <div class="form-group">
    <label for="coach_id">
      Coach
    </label>

    <input type="text" id="coach_id" name="coach_id" class="form-control" value="<%= @plan.coach_id %>">
  </div>

  <div class="form-group">
    <label for="status">
      Status
    </label>

    <input type="text" id="status" name="status" class="form-control" value="<%= @plan.status %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create plan
  </button>
</form>

<hr>

<a href="/plans">
  Go back
</a>
